{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(gh api *)",
      "Bash(gh repo view *)",
      "Bash(gh repo list *)",
      "Bash(gh issue view *)",
      "Bash(gh issue list *)",
      "Bash(gh issue status *)",
      "Bash(gh pr view *)",
      "Bash(gh pr list *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr status *)",
      "Bash(gh run list *)",
      "Bash(gh run view *)",
      "Bash(gh workflow list *)",
      "Bash(gh workflow view *)",
      "Bash(gh search *)",
      "Bash(gh label list *)",
      "Bash(gh release list *)",
      "Bash(gh auth status *)",
      "Bash(but status)",
      "Bash(but status *)",
      "Bash(but -C * status)",
      "Bash(but -C * status *)",
      "Bash(but diff)",
      "Bash(but diff *)",
      "Bash(but -C * diff)",
      "Bash(but -C * diff *)",
      "Bash(but show *)",
      "Bash(but -C * show *)",
      "Bash(but branch list)",
      "Bash(but branch list *)",
      "Bash(but -C * branch list)",
      "Bash(but -C * branch list *)",
      "Bash(but pull)",
      "Bash(but pull *)",
      "Bash(but -C * pull)",
      "Bash(but -C * pull *)",
      "Bash(but oplog)",
      "Bash(but oplog *)",
      "Bash(but -C * oplog)",
      "Bash(but -C * oplog *)",
      "Bash(but config *)",
      "Bash(but -C * config *)",
      "Bash(git status *)",
      "Bash(git status)",
      "Bash(git -C * status *)",
      "Bash(git -C * status)",
      "Bash(git diff *)",
      "Bash(git diff)",
      "Bash(git -C * diff *)",
      "Bash(git -C * diff)",
      "Bash(git log *)",
      "Bash(git -C * log *)",
      "Bash(git show *)",
      "Bash(git -C * show *)",
      "Bash(git branch *)",
      "Bash(git branch)",
      "Bash(git -C * branch *)",
      "Bash(git -C * branch)",
      "Bash(git remote *)",
      "Bash(git -C * remote *)",
      "Bash(git tag *)",
      "Bash(git tag)",
      "Bash(git -C * tag *)",
      "Bash(git -C * tag)",
      "Bash(git stash list *)",
      "Bash(git stash list)",
      "Bash(git blame *)",
      "Bash(git -C * blame *)",
      "Bash(git shortlog *)",
      "Bash(git -C * shortlog *)",
      "Bash(git rev-parse *)",
      "Bash(git -C * rev-parse *)",
      "Bash(git ls-files *)",
      "Bash(git -C * ls-files *)",
      "Bash(git config --get *)",
      "Bash(git config --list *)",
      "Bash(git config --list)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/gitbutler-commit-hook.py",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/gh-api-readonly.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tmux-notify.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tmux-notify.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ]
  }
}
